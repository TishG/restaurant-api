<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/head.ejs %>
  </head>
    <body>
        <% include ./partials/navbar.ejs %>
        <main class="photo-1-background container-fluid" id="home-search-container">
            <div class="message-box d-flex justify-content-center jumbotron">
              <div class="welcome-message">
                <h1>Welcome to Restaurant API</h1>
                <p class="text-center text-secondary">Search for cuisines or restaurants in your area</p>
              </div>
              </div>
          <div class="container px-1 search-form d-flex justify-content-center">
        <form class="form-inline" action="/results" method="GET">
          <div class="form-group mr-1 mt-sm-1">
          <select class="form-control select-box text-secondary pl-1" required>
            <option name="entity" value="locality">City</option>
            <option name="entity" value="cuisines">Cuisine</option>
          </select>
        </div>
          <div class="form-group mr-1">
          <input class="form-control mw-100 search-box pl-2" type="text" aria-describedby="entryHelp" placeholder="Enter city or cuisine" name="entry">
        </div>
        <div class="form-group">
          <input class="submit" type="submit">
        </div>
        </form>
    </div>
      </main>        
        <% include ./partials/baseScripts.ejs %>
    </body>
</html>